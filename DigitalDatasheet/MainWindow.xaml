<Window x:Class="DigitalDatasheet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalDatasheet" d:DataContext="{d:DesignInstance Type=local:MainWindow}"
        mc:Ignorable="d"
        Icon="Images/microscope_icon.ico"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        Closed="Window_Closed"
        Title="PTL - Digital Datasheet"
        Height="{x:Static SystemParameters.PrimaryScreenHeight}"
        Width="{x:Static SystemParameters.PrimaryScreenWidth}"
        WindowState="Maximized">

    <Window.Resources>

        <ContextMenu x:Key="set_data_row_menu">
            <MenuItem Header="_Set to each structure" Click="Auto_Set_Data_Row" />
        </ContextMenu>

        <ContextMenu x:Key="measurement_menu">
            <MenuItem Header="_Normal Background" Tag="standard_background" Click="Measurement_Format_Background" />
            <MenuItem Header="_Yellow Background" Tag="yellow_background" Click="Measurement_Format_Background">
                <MenuItem.Icon>
                    <Image Source="Images/yellow_background_icon.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="_Add/Remove Note" Click="Measurement_Note_Edit">
                <MenuItem.Icon>
                    <Image Source="Images/edit_icon.png" Width="50" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="_Zoom" Tag="" Click="MeasurementRow_Zoom_Click" />
        </ContextMenu>

        <ContextMenu x:Key="requirement_menu">
            <MenuItem Header="Set to Structure" Click="Set_Structure_Requirement" />
            <MenuItem Header="Combine/Separate Requirements" Click="Requirements_Grid_Edit" />
        </ContextMenu>

        <ContextMenu x:Key="remark_menu">
            <MenuItem Header="_Yellow Background" Tag="yellow_background" Click="Remark_Format_Background">
                <MenuItem.Icon>
                    <Image Source="Images/yellow_background_icon.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="_Normal Background" Tag="standard_background" Click="Remark_Format_Background" />
            <!--<MenuItem Header="Set to Serial Number(s)" Click="Set_Remark_To_Serial_Number" />-->
        </ContextMenu>

    </Window.Resources>

    <DockPanel>

        <!--#region Menu-->
        <Menu DockPanel.Dock="Top" FontSize="14" Padding="4" Background="#fff">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Background="#fff" BorderThickness="0" Padding="0 6" Click="New_Job">
                    <MenuItem.Icon>
                        <Image Source="Images/new_icon.png" />
                    </MenuItem.Icon>
                    <!--<MenuItem Header="_New Window" Click="New_Job" Background="#fff" BorderThickness="0" Padding="0 6" Tag="new" />-->
                </MenuItem>
                <MenuItem Header="_Open" Background="#fff" BorderThickness="0" Padding="0 6">
                    <MenuItem.Icon>
                        <Image Source="Images/open_icon.png" />
                    </MenuItem.Icon>
                    <MenuItem Header="_Recent" x:Name="recent_jobs_menu" Background="#fff" BorderThickness="0" Padding="0 6">
                        <MenuItem.Icon>
                            <Image Source="Images/clock_icon.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_New Window" Click="Open_Menu_Click" Background="#fff" BorderThickness="0" Padding="0 6" Tag="new" />
                    <MenuItem Header="_This Window" Click="Open_Menu_Click" Background="#fff" BorderThickness="0" Padding="0 6" Tag="this" />
                </MenuItem>
                <MenuItem Header="_Save" x:Name="save_menu" Click="Save_Menu_Click" Background="#fff" BorderThickness="0" Padding="0 6" InputGestureText="Ctrl+S">
                    <MenuItem.Icon>
                        <Image Source="Images/save_icon.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Auto Save" StaysOpenOnClick="True" IsChecked="{Binding Path=AutoSave, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Click="AutoSave_Click" x:Name="autoSave_menu" IsCheckable="True" Background="#fff" BorderThickness="0" Padding="0 6" />
                <Separator />
                <MenuItem Header="_Exit" Click="Close_Window" Background="#fff" BorderThickness="0" Padding="0 6" InputGestureText="Ctrl+Q">
                    <MenuItem.Icon>
                        <Image Source="Images/error_icon.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Structure Order" Click="Edit_StructureOrder_Click" Background="#fff" BorderThickness="0" Padding="0 6" />
                <MenuItem Header="Default Mistype Values" Click="Edit_MistypeValues_Click" Background="#fff" BorderThickness="0" Padding="0 6" />
                <MenuItem Header="_Remarks Document" Click="Edit_RemarksDocument_Menu_Click" Background="#fff" BorderThickness="0" Padding="0 6" />
                <MenuItem Header="_Specification Requirements" Click="Edit_SpecificationRequirements_Menu_Click" Background="#fff" BorderThickness="0" Padding="0 6" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Jobs" Background="#fff" BorderThickness="0" Padding="0 6">
                    <MenuItem Header="_Recent" Background="#fff" BorderThickness="0" Padding="0 6" />
                    <MenuItem Header="_Select Range" Background="#fff" BorderThickness="0" Padding="0 6" />
                </MenuItem>
                <MenuItem Header="_Notes" Click="View_Notes_Click" Background="#fff" BorderThickness="0" Padding="0 6" />
            </MenuItem>
            <MenuItem Header="_Create">
                <MenuItem Header="Hard Copy" Click="Create_Hard_Copy_Async" Background="#fff" BorderThickness="0" Padding="0 6" />
                <MenuItem Header="Test Report" Click="Create_Test_Report_Async" Background="#fff" BorderThickness="0" Padding="0 6" />
            </MenuItem>
        </Menu>
        <!--#endregion Menu-->

        <!--#region PTL Logo Header-->
        <Border DockPanel.Dock="Top" Height="60" Background="#337ab7">
            <Image Source="Images/ptl_logo.png" Stretch="None" Height="Auto" />
        </Border>
        <!--#endregion PTL Logo Header-->

        <!--#region Current Job & Toggle Form -->
        <Border DockPanel.Dock="Top" BorderBrush="#337ab7" BorderThickness="0 0 0 .4" Margin="12 0" Padding="0 0 0 4">
            <Grid Margin="12 0" VerticalAlignment="Bottom">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding Path=AutoSaveLabel, Mode=Default, UpdateSourceTrigger=PropertyChanged}"
                               Foreground="{Binding Path=AutoSaveDecoration, Mode=Default, UpdateSourceTrigger=PropertyChanged}"
                               FontWeight="SemiBold" Margin="0 0 24 0" />
                    <TextBlock Text="Current Job: " />
                    <TextBlock Text="{Binding Path=FormSet.CurrentJobTitle, Mode=Default, UpdateSourceTrigger=PropertyChanged}" FontWeight="SemiBold" />
                    <TextBlock Text="{Binding Path=DueDateInfoLabel, Mode=Default, UpdateSourceTrigger=PropertyChanged}"
                               Foreground="{Binding Path=DueDateInfoColor, Mode=Default, UpdateSourceTrigger=PropertyChanged}"
                               Margin="24 0 0 0" />
                    <Image Visibility="{Binding Path=ExpediteIconShow, Mode=Default, UpdateSourceTrigger=PropertyChanged}"
                           Source="Images/danger_icon.png" Height="25" Width="25" Margin="0 -5 0 -6"  />
                </StackPanel>
                <Button x:Name="toggle_form_btn" HorizontalAlignment="Right" VerticalAlignment="Center" Click="Toggle_Form">
                    <Image Source="Images/down_icon.png" Height="20" x:Name="arrow_img" />
                </Button>
            </Grid>
        </Border>
        <!--#endregion  -->

        <!--#region Measurement Zoom -->
        <Canvas x:Name="zoom_canvas" Margin="4 -4 0 0" DockPanel.Dock="Top" Visibility="Collapsed" Panel.ZIndex="1" VerticalAlignment="Center">
            <Border Height="180" Background="White" BorderBrush="DarkGray" BorderThickness="2">
                <Grid x:Name="zoom_grid" KeyDown="Job_Grid_KeyDown">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <!--<ColumnDefinition Width="*" />-->
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal" Margin="12 0 0 0" VerticalAlignment="Center">
                        <TextBlock Text="Loc:" FontSize="16" Foreground="Red" FontWeight="Medium" Padding="2" />
                        <TextBlock x:Name="locZoom" FontSize="16" Foreground="Red" Padding="2" />
                        <TextBlock Text="S/N:" FontSize="16" FontWeight="Medium" Padding="10 2 2 2" />
                        <TextBlock x:Name="snZoom" FontSize="16" Padding="2" />
                    </StackPanel>
                    <TextBlock x:Name="structureZoom" Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="6" VerticalAlignment="Center" FontSize="24" />

                    <Button Grid.Column="13" Grid.Row="0" Background="White" BorderThickness="0" Height="30" HorizontalAlignment="Right" Click="MeasurementRow_Zoom_Close_Click" Cursor="Hand">
                        <Image Source="Images/error_icon.png" />
                    </Button>

                    <Grid Grid.Row="1" Grid.RowSpan="2" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0">
                            <Button Click="Prev_Zoom_Click">
                                <Image Source="Images/up_icon.png" Height="30" />
                            </Button>
                            <TextBlock Text="Prev" HorizontalAlignment="Center" />
                        </StackPanel>
                        <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                            <TextBlock Text="Next" HorizontalAlignment="Center" />
                            <Button Click="Next_Zoom_Click">
                                <Image Source="Images/down_icon.png" Height="30" />
                            </Button>
                        </StackPanel>
                    </Grid>

                    <Border Grid.Row="1" Grid.Column="1" BorderBrush="DarkGray" BorderThickness="1" Background="White">
                        <TextBlock Text="Hole Copper Plating (Avg)" TextWrapping="Wrap" TextAlignment="Center" Padding="2" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="2" BorderBrush="DarkGray" BorderThickness="1" Padding="2">
                        <TextBlock Text="External Conductor Thickness After Plating" TextWrapping="Wrap" TextAlignment="Center" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="3" BorderBrush="DarkGray" BorderThickness="1" Padding="2">
                        <TextBlock Text="Surface Clad Copper" TextWrapping="Wrap" TextAlignment="Center" />
                    </Border>
                    <!--<Border Grid.Row="1" Grid.Column="4" BorderBrush="DarkGray" BorderThickness="1" Padding="2">
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                                <Run>Selective Plate on Surface Foil</Run>
                                <LineBreak />
                                <Run FontSize="10">(if applicable)</Run>
                        </TextBlock>
                        --><!--<TextBlock TextWrapping="Wrap" TextAlignment="Center" >Surface<LineBreak/>Clad/Wrap Plating</TextBlock>--><!--
                    </Border>-->
                    <Border Grid.Row="1" Grid.Column="4" BorderBrush="DarkGray" BorderThickness="1" Padding="2">
                        <TextBlock Text="Surface Wrap Copper" TextWrapping="Wrap" TextAlignment="Center" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="5" BorderBrush="DarkGray" BorderThickness="1" Padding="2">
                        <TextBlock Text="Cap Copper Plating" TextWrapping="Wrap" TextAlignment="Center" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="6" BorderBrush="DarkGray" BorderThickness="1" Padding="2">
                        <TextBlock Text="Internal Clad Copper" TextWrapping="Wrap" TextAlignment="Center" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="7" BorderBrush="DarkGray" BorderThickness="1" Padding="2">
                        <TextBlock Text="Minimum Etchback" TextWrapping="Wrap" TextAlignment="Center" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="8" BorderBrush="DarkGray" BorderThickness="1" Padding="2">
                        <TextBlock Text="Maximum Etchback" TextWrapping="Wrap" TextAlignment="Center" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="9" BorderBrush="DarkGray" BorderThickness="1" Padding="2">
                        <TextBlock Text="Minimum Internal Annular Ring" TextWrapping="Wrap" TextAlignment="Center" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="10" BorderBrush="DarkGray" BorderThickness="1" Padding="2">
                        <TextBlock Text="Minimum External Annular Ring" TextWrapping="Wrap" TextAlignment="Center" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="11" BorderBrush="DarkGray" BorderThickness="1" Padding="2">
                        <TextBlock Text="Minimum Dielectric Layer Thickness" TextWrapping="Wrap" TextAlignment="Center" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="12" BorderBrush="DarkGray" BorderThickness="1 1 0 1" Padding="2">
                        <TextBlock Text="Maximum Wicking" TextWrapping="Wrap" TextAlignment="Center" />
                    </Border>

                    <TextBox x:Name="hcpZoom" Grid.Row="2" LostFocus="Measurement_LostFocus" ContextMenu="{StaticResource measurement_menu}" Grid.Column="1" Padding="0 0 0 5" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" VerticalContentAlignment="Bottom" AcceptsReturn="True" />
                    <TextBox x:Name="hcpNoteZoom" Grid.Row="2" Visibility="Hidden" Tag="note" Grid.Column="1" MinWidth="15" Padding="-1 -2 -1 0" Background="AliceBlue" FontSize="14" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" />

                    <TextBox x:Name="extConZoom" Grid.Row="2" LostFocus="Measurement_LostFocus" ContextMenu="{StaticResource measurement_menu}" Grid.Column="2" Padding="0 0 0 5" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" VerticalContentAlignment="Bottom" AcceptsReturn="True" />
                    <TextBox x:Name="extConNoteZoom" Grid.Row="2" Visibility="Hidden" Tag="note" Grid.Column="2" MinWidth="15" Padding="-1 -2 -1 0" Background="AliceBlue" FontSize="14" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" />

                    <TextBox x:Name="sCladZoom" Grid.Row="2" LostFocus="Measurement_LostFocus" ContextMenu="{StaticResource measurement_menu}" Grid.Column="3" Padding="0 0 0 5" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" VerticalContentAlignment="Bottom" AcceptsReturn="True" />
                    <TextBox x:Name="sCladNoteZoom" Grid.Row="2" Visibility="Hidden" Tag="note" Grid.Column="3" MinWidth="15" Padding="-1 -2 -1 0" Background="AliceBlue" FontSize="14" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" />

                    <!--<TextBox x:Name="selPlateZoom" Grid.Row="2" LostFocus="Measurement_LostFocus" ContextMenu="{StaticResource measurement_menu}" Grid.Column="4" Padding="0 0 0 5" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" VerticalContentAlignment="Bottom" AcceptsReturn="True" />
                    <TextBox x:Name="selPlateNoteZoom" Grid.Row="2" Visibility="Hidden" Tag="note" Grid.Column="4" MinWidth="15" Padding="-1 -2 -1 0" Background="AliceBlue" FontSize="14" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" />-->

                    <TextBox x:Name="wrapZoom" Grid.Row="2" LostFocus="Measurement_LostFocus" ContextMenu="{StaticResource measurement_menu}" Grid.Column="4" Padding="0 0 0 5" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" VerticalContentAlignment="Bottom" AcceptsReturn="True" />
                    <TextBox x:Name="wrapNoteZoom" Grid.Row="2" Visibility="Hidden" Tag="note" Grid.Column="4" MinWidth="15" Padding="-1 -2 -1 0" Background="AliceBlue" FontSize="14" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" />

                    <TextBox x:Name="capZoom" Grid.Row="2" LostFocus="Measurement_LostFocus" ContextMenu="{StaticResource measurement_menu}" Grid.Column="5" Padding="0 0 0 5" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" VerticalContentAlignment="Bottom" AcceptsReturn="True" />
                    <TextBox x:Name="capNoteZoom" Grid.Row="2" Visibility="Hidden" Tag="note" Grid.Column="5" MinWidth="15" Padding="-1 -2 -1 0" Background="AliceBlue" FontSize="14" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" />

                    <TextBox x:Name="iCladZoom" Grid.Row="2" LostFocus="Measurement_LostFocus" ContextMenu="{StaticResource measurement_menu}" Grid.Column="6" Padding="0 0 0 5" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" VerticalContentAlignment="Bottom" AcceptsReturn="True" />
                    <TextBox x:Name="iCladNoteZoom" Grid.Row="2" Visibility="Hidden" Tag="note" Grid.Column="6" MinWidth="15" Padding="-1 -2 -1 0" Background="AliceBlue" FontSize="14" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" />

                    <TextBox x:Name="minEtchZoom" Grid.Row="2" LostFocus="Measurement_LostFocus" ContextMenu="{StaticResource measurement_menu}" Grid.Column="7" Padding="0 0 0 5" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" VerticalContentAlignment="Bottom" AcceptsReturn="True" />
                    <TextBox x:Name="minEtchNoteZoom" Grid.Row="2" Visibility="Hidden" Tag="note" Grid.Column="7" MinWidth="15" Padding="-1 -2 -1 0" Background="AliceBlue" FontSize="14" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" />

                    <TextBox x:Name="maxEtchZoom" Grid.Row="2" LostFocus="Measurement_LostFocus" ContextMenu="{StaticResource measurement_menu}" Grid.Column="8" Padding="0 0 0 5" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" VerticalContentAlignment="Bottom" AcceptsReturn="True" />
                    <TextBox x:Name="maxEtchNoteZoom" Grid.Row="2" Visibility="Hidden" Tag="note" Grid.Column="8" MinWidth="15" Padding="-1 -2 -1 0" Background="AliceBlue" FontSize="14" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" />

                    <TextBox x:Name="iRingZoom" Grid.Row="2" LostFocus="Measurement_LostFocus" ContextMenu="{StaticResource measurement_menu}" Grid.Column="9" Padding="0 0 0 5" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" VerticalContentAlignment="Bottom" AcceptsReturn="True" />
                    <TextBox x:Name="iRingNoteZoom" Grid.Row="2" Visibility="Hidden" Tag="note" Grid.Column="9" MinWidth="15" Padding="-1 -2 -1 0" Background="AliceBlue" FontSize="14" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" />

                    <TextBox x:Name="eRingZoom" Grid.Row="2" LostFocus="Measurement_LostFocus" ContextMenu="{StaticResource measurement_menu}" Grid.Column="10" Padding="0 0 0 5" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" VerticalContentAlignment="Bottom" AcceptsReturn="True" />
                    <TextBox x:Name="eRingNoteZoom" Grid.Row="2" Visibility="Hidden" Tag="note" Grid.Column="10" MinWidth="15" Padding="-1 -2 -1 0" Background="AliceBlue" FontSize="14" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" />

                    <TextBox x:Name="diZoom" Grid.Row="2" LostFocus="Measurement_LostFocus" ContextMenu="{StaticResource measurement_menu}" Grid.Column="11" Padding="0 0 0 5" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" VerticalContentAlignment="Bottom" AcceptsReturn="True" />
                    <TextBox x:Name="diNoteZoom" Grid.Row="2" Visibility="Hidden" Tag="note" Grid.Column="11" MinWidth="15" Padding="-1 -2 -1 0" Background="AliceBlue" FontSize="14" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" />

                    <TextBox x:Name="wickZoom" Grid.Row="2" LostFocus="Measurement_LostFocus" ContextMenu="{StaticResource measurement_menu}" Grid.Column="12" Padding="0 0 0 5" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" VerticalContentAlignment="Bottom" AcceptsReturn="True" />
                    <TextBox x:Name="wickNoteZoom" Grid.Row="2" Visibility="Hidden" Tag="note" Grid.Column="12" MinWidth="15" Padding="-1 -2 -1 0" Background="AliceBlue" FontSize="14" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" />

                </Grid>
            </Border>
        </Canvas>
        <!--#endregion Measurement Zoom-->

        <Grid x:Name="job_page" KeyDown="Job_Grid_KeyDown">
            <Grid.RowDefinitions>
                <!-- Job Information Row -->
                <RowDefinition Height="Auto" />
                <!-- Examination Information Row -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--#region Job Information Form -->
            <Grid Grid.Row="0" Margin="20 8" x:Name="job_form" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.ColumnSpan="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Testing Performed On -->
                    <StackPanel Orientation="Horizontal" Margin="4">
                        <TextBlock Text="Testing Performed On:" FontSize="16" />
                        <StackPanel Margin="24 0 0 0">
                            <RadioButton Checked="Testing_Performed_On_Checked" IsChecked="{Binding Path=FormSet.Coupons, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" GroupName="testing_performed_on" x:Name="coupons_input" VerticalContentAlignment="Center" Content="Coupons" FontSize="14" Height="25" />
                            <RadioButton Checked="Testing_Performed_On_Checked" IsChecked="{Binding Path=FormSet.BareBoards, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" GroupName="testing_performed_on" x:Name="bare_boards_input" VerticalContentAlignment="Center" Content="Bare Boards" FontSize="14" Height="25" />
                        </StackPanel>
                        <StackPanel Margin="24 0 0 0">
                            <StackPanel Orientation="Horizontal">
                                <RadioButton Checked="Testing_Performed_On_Checked" IsChecked="{Binding Path=FormSet.CustomerMounts, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" GroupName="testing_performed_on" x:Name="customer_mounts_input" VerticalContentAlignment="Center" Content="Customer Mounts/Quantity" FontSize="14" Margin="0 0 4 0" />
                                <TextBox Text="{Binding Path=FormSet.CustomerMountQty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="customer_mounts_qty_input" Width="25" Height="25" Padding="2" FontSize="14" />
                            </StackPanel>
                            <RadioButton Checked="Testing_Performed_On_Checked" IsChecked="{Binding Path=FormSet.AssembledBoards, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" GroupName="testing_performed_on" x:Name="assembled_boards_input" VerticalContentAlignment="Center" Content="Assembled Boards" FontSize="14" Height="25" />
                        </StackPanel>
                        <StackPanel Margin="24 0 0 0">
                            <RadioButton Checked="Testing_Performed_On_Checked" IsChecked="{Binding Path=FormSet.Class2Assessment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" GroupName="testing_performed_on" x:Name="class2_assessment_input" VerticalContentAlignment="Center" Content="Class 2 Visual Assessment" FontSize="14" Height="25" />
                            <TextBlock Text="of External Annular Ring" FontSize="14" Margin="20 0 0 0" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="12 4">
                        <TextBlock Text="Date Tested" FontSize="16" Margin="4" />
                        <!-- Date (Tested) -->
                        <DatePicker SelectedDate="{Binding Path=FormSet.DateTested, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="date_tested_input" Padding="2" Height="25" FontSize="14" />
                    </StackPanel>
                    <StackPanel Grid.Column="2" Margin="12 4">
                        <TextBlock Text="Tested By" FontSize="16" Margin="4" />
                        <!-- Tested By -->
                        <TextBox Text="{Binding Path=FormSet.TestedBy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="tested_by_input" Padding="2" Height="25" FontSize="14" CharacterCasing="Upper" MaxLength="2" />
                    </StackPanel>
                    <StackPanel Grid.Column="3" Margin="12 4">
                        <TextBlock Text="Checked By" FontSize="16" Margin="4" />
                        <!-- Checked By -->
                        <TextBox Text="{Binding Path=FormSet.CheckedBy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="checked_by_input" Padding="2" Height="25" FontSize="14" CharacterCasing="Upper" MaxLength="2" />
                    </StackPanel>
                </Grid>
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="12 4" >
                    <TextBlock Text="Work Order Number" FontSize="16" Margin="4" />
                    <StackPanel Orientation="Horizontal">
                        <!-- Work Order Number -->
                        <TextBox Text="{Binding Path=FormSet.WorkOrderNo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="80" x:Name="wo_number_input" Height="25" Padding="2" FontSize="14"
                                 TextChanged="Check_Work_Order_Log" LostFocus="WorkOrder_LostFocus" />
                        <Label Content="-"  FontSize="16" />
                        <TextBox Text="{Binding Path=FormSet.WorkOrderNoDash, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="20" Height="25" Padding="2" FontSize="14" x:Name="wo_number_dash_input"
                                 TextChanged="Check_Work_Order_Log" LostFocus="WorkOrder_LostFocus" />
                        <Image x:Name="wo_check_icon" Visibility="Hidden" Source="Images/warning_icon.png" Height="30" Width="30" VerticalAlignment="Center" Margin="8 0">
                            <Image.ToolTip>
                                <TextBlock Text="WARNING: You have entered a work order number that already exists!" />
                            </Image.ToolTip>
                        </Image>
                    </StackPanel>
                </StackPanel>
                <!--<Button Grid.Row="1" Grid.Column="0" x:Name="job_info_btn" Click="Get_Work_Order_Info" Content="Get Work Order Info" MinWidth="160" MinHeight="40" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 25 4" />-->
                <StackPanel Grid.Row="2" Grid.Column="0" Margin="12 4">
                    <TextBlock Text="Part Number" FontSize="16" Margin="4" />
                    <!-- Part Number -->
                    <TextBox Text="{Binding Path=FormSet.PartNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="part_number_input" Padding="2" Height="25" FontSize="14" />
                </StackPanel>
                <StackPanel Grid.Row="3" Grid.Column="0" Margin="12 4">
